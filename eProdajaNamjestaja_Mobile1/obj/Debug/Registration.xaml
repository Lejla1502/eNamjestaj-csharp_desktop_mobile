<Page
    x:Class="eProdajaNamjestaja_Mobile1.Registration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:eProdajaNamjestaja_Mobile1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Center" Margin="30,0,30,0">
        <TextBlock Text="eProdaja::registracija" FontSize="25" VerticalAlignment="Top" />

        <TextBox Name="imeInput" Header="Ime:" />
        <TextBox Name="prezimeInput" Header="Prezime:" />
        <TextBox Name="emailInput" Header="E-mail:" InputScope="EmailSmtpAddress" />
        <TextBox Name="korisnickoImeInput" Header="Korisničko ime:" />
        <PasswordBox Name="lozinkaInput" Header="Lozinka:" />

        <Button x:ConnectionId='1' Name="registracijaButton"                                  Content="Registracija" HorizontalAlignment="Right"></Button>

    </StackPanel>
</Page>

